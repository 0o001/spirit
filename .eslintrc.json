{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "space-before-function-paren": ["error", "never"],
    "padded-blocks": ["error", "never"]
  }
}

